---
import Layout from '@/layouts/Layout.astro'
import '@/styles/globals.css'
import { isAlive, getEventsPerYear } from '@/lib/api'
import type { Events, ErrorResponse } from '@/lib/api/types.ts'
import { astroI18n, t } from 'astro-i18n'

console.log(isAlive())

const events: Events | ErrorResponse = await getEventsPerYear(2024)
---

