{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"complexity": {
				"noUselessFragments": "off"
			},
			"style": {
				"useSingleVarDeclarator": "off",
				"noParameterAssign": "off",
				"noNonNullAssertion": "off",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false
					}
				},
				"noDefaultExport": "off",
				"useFilenamingConvention": {
					"options": {
						"strictCase": false,
						"filenameCases": [
							"camelCase",
							"PascalCase",
							"snake_case",
							"kebab-case"
						]
					}
				}
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"nursery": {
				"all": false
			},
			"correctness": {
				"useHookAtTopLevel": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "asNeeded",
			"arrowParentheses": "always"
		}
	},
	"json": {
		"formatter": {}
	},
	"files": {
		"ignore": [
			"./src/env.d.ts",
			"./dist/**",
			"./node_modules/**",
			"./.git/**",
			"./.vscode/**",
   "./e2e/**"
		]
	}
}
