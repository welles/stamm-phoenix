{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "asNeeded",
			"arrowParentheses": "always"
		}
	},
	"json": {
		"formatter": {}
	},
	"files": {
		"ignore": [
			"./src/env.d.ts",
			"./dist/**",
			"./node_modules/**",
			"./.git/**",
			"./.vscode/**",
   "./e2e/**"
		]
	}
}
